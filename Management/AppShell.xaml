<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Management.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Management.Screens"
    Shell.FlyoutBehavior="Disabled"
    Title="Management">

    <ShellContent
        Title="SIGN-IN"
        ContentTemplate="{DataTemplate local:SignIn}"
        Route="SignIn" />

    <ShellContent
        Title="SIGN-UP"
        ContentTemplate="{DataTemplate local:SignUp}"
        Route="SignUp" />

    <ShellContent
        Title="HOME"
        ContentTemplate="{DataTemplate local:Home}"
        Route="Home" />

    <ShellContent
        Title="ATTENDANCE"
        ContentTemplate="{DataTemplate local:Attendance}"
        Route="Attendance" />

    <ShellContent
        Title="LEAVE REQUEST"
        ContentTemplate="{DataTemplate local:Request}"
        Route="Leave Request" />
    <ShellContent
        Title="MANAGE EMPLOYEES"
        ContentTemplate="{DataTemplate local:ManageEmployees}"
        Route="Manage Employees" />
    <ShellContent
        Title="REPORT'S"
        ContentTemplate="{DataTemplate local:Reports}"
        Route="Report's" />
    <ShellContent
        Title="TASK ASSIGNING"
        ContentTemplate="{DataTemplate local:TaskAssigning}"
        Route="Task Assigning" />

</Shell>
