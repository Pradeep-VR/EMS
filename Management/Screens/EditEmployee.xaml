<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Management.Screens.EditEmployee"
             Title="EDIT EMPLOYEE" Shell.BackgroundColor="{x:StaticResource Primary}"
             Shell.TitleColor="#EEF5FF">
    <StackLayout Padding="10">

        <Label Text="Edit Employee" FontSize="Large" HorizontalOptions="Center" />

        <Entry x:Name="NameEntry" Placeholder="Name" />
        <Entry x:Name="EmpIDEntry" Placeholder="EmpID" />
        <Entry x:Name="EmailEntry" Placeholder="Email" />

        <Button Text="Save" Clicked="OnSaveClicked" />

    </StackLayout>
</ContentPage>